   		fullscreen	0
		rect		120 70 600 600
		focusColor	UI_FOCUS_COLOR
   		style		1
   		border		1
		popup
		onESC 		{ close findplayer_popmenu }

		itemDef
		{
			name		window
			rect		0 40 400 320
			style		WINDOW_STYLE_FILLED
			backcolor	.1 .1 .1 1
			visible		1
			decoration
		}

		itemDef
		{
			name		window
			rect		2 42 396 20
			style		WINDOW_STYLE_FILLED
			backcolor	.3 0.5 0.2 0.5
			visible		1
			decoration
		}

		itemDef 
		{
			name		window
			text		"Search Player"
			style		WINDOW_STYLE_FILLED
			textfont	UI_FONT_NORMAL
			textscale	.3
			rect		80 70 250 20
			textalign	0
			textalignx	80
			textaligny	-12
			forecolor	1 1 1 1
			backcolor	0 0 0 .25
			visible		1
			decoration
		}

		itemDef
		{
			name		window
			style		WINDOW_STYLE_EMPTY
			text		"^5»"
			textfont	UI_FONT_NORMAL
