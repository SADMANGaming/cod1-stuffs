			textscale	.3
			type		ITEM_TYPE_BUTTON
			style		WINDOW_STYLE_FILLED
			rect		310 325 60 26
			textalign	0
			textalignx	15
			textaligny	20
			forecolor	1 1 1 1
			backcolor	UI_BUTTON_BACK_COLOR
			border		1
			bordercolor	0 0 0 1
			visible 1
			
			action 
			{ 
				play "mouse_click" ; 

				ui_script FoundPlayerJoinServer 
