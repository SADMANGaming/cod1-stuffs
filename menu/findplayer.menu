			textalignx	15
			textaligny	20
			textfont	UI_FONT_NORMAL
			textscale	.3
			forecolor	1 1 1 1
			backcolor	UI_BUTTON_BACK_COLOR
			border		1
			bordercolor	0 0 0 1
			visible 1
			
			action 
			{
				play "mouse_click" ; 

				close findplayer_popmenu ; 
			}
		mouseEnter		{ setitemcolor yes backcolor UI_BUTTON_BACK_COLOR_HOVER;play "mouse_over"; }
