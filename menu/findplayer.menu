			rect		15 85 215 32
			textalign	0
			textalignx  	20
			textaligny	2
			forecolor	1 1 1 1
			backcolor	0 0 0 .25
			visible		1
		}

		itemDef 
		{
      			name		namefield
      			type		4
			style		WINDOW_STYLE_FILLED
			cvar		"ui_findplayer"
			text		" "
			maxChars	20
			maxpaintchars	30
      			rect		60 70 195 20 
      			textalign	0		
      			textalignx	20
      			textaligny	17
			textfont	UI_FONT_NORMAL
			textscale	.25
			forecolor	OPTIONS_CONTROL_FORECOLOR
      			visible		1 

			action 
			{ 
				play "mouse_click" ; 
				ui_script FindPlayer
			}
    	}

		// LIST OF SERVER NAMES

		itemDef 
		{
			name			servername_feeder
			rect			30 95 340 85
			type			ITEM_TYPE_LISTBOX
			style			WINDOW_STYLE_FILLED
			elementwidth		120
			elementheight		15
			textfont		UI_FONT_NORMAL
			textscale		.3
			textaligny		0
			elementtype		LISTBOX_TEXT
			feeder			FEEDER_FINDPLAYER
			border			1
			forecolor		1 1 1 1
			backcolor		0 0 0 .25
			bordercolor		0 0 0 1
			outlinecolor		OPTIONS_CONTROL_BACKCOLOR
			visible			1
			columns			1	2 40 30
	 	
			doubleClick
			{
				ui_script FoundPlayerJoinServer 
			}
		}

		// LIST OF SERVER STATUS INFORMATION

		itemDef 
		{
			name			serverInfoList		
			rect			30 187 340 130
			type			ITEM_TYPE_LISTBOX
			style			WINDOW_STYLE_FILLED
			elementwidth		120
			elementheight		15
			forecolor		1 1 1 1
